filetype plugin on

call pathogen#infect()

let mapleader = ","
syntax enable
"set foldmethod=syntax
syntax on
set number
set incsearch
set hlsearch
set ignorecase
set autoindent
set fileencoding=utf-8
set encoding=utf-8
set backspace=indent,eol,start
set ts=2 sts=2 sw=2 expandtab

set smartcase
set gdefault
set showmatch

set winwidth=84
set winheight=5
set winminheight=5


set list
